# =======================================================
# VIDEBIMUS AI - ENVIRONMENT CONFIGURATION (EXAMPLE)
# =======================================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local or real credentials to version control
# =======================================================

# =======================================================
# APPLICATION SETTINGS (Required)
# =======================================================
NODE_ENV=development
APP_NAME=Videbimus AI
APP_VERSION=1.0.0
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=Videbimus AI

# =======================================================
# DATABASE CONFIGURATION (Required)
# =======================================================
# PostgreSQL connection string
DATABASE_URL="postgresql://vidibemus:your_password@localhost:5432/vidibemus_ai"

# =======================================================
# NEXTAUTH CONFIGURATION (Required)
# =======================================================
NEXTAUTH_URL=http://localhost:3000
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_DEBUG=true

# =======================================================
# OAUTH PROVIDERS (Optional - for social login)
# =======================================================
# Google OAuth - Get from https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth - Get from https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Microsoft/Azure AD OAuth
AZURE_AD_CLIENT_ID=your-azure-ad-client-id
AZURE_AD_CLIENT_SECRET=your-azure-ad-client-secret
AZURE_AD_TENANT_ID=your-azure-ad-tenant-id

# =======================================================
# SECURITY & ENCRYPTION (Important)
# =======================================================
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=your-encryption-key-here
JWT_SECRET=your-jwt-secret-here
SESSION_SECRET=your-session-secret-here

# =======================================================
# EMAIL SERVICES (Optional)
# =======================================================
# Resend API - Get from https://resend.com/
RESEND_API_KEY=your-resend-api-key
FROM_EMAIL=noreply@yourdomain.com
SUPPORT_EMAIL=support@yourdomain.com

# =======================================================
# FILE UPLOAD SETTINGS (Optional)
# =======================================================
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain
UPLOAD_DESTINATION=./uploads

# AWS S3 (For production file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-bucket-name

# =======================================================
# MONITORING & ANALYTICS (Optional)
# =======================================================
# Sentry - Get from https://sentry.io/
SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_SENTRY_DSN=your-public-sentry-dsn

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# =======================================================
# FEATURE FLAGS (Optional)
# =======================================================
ENABLE_COLLABORATION=true
ENABLE_AI_CHAT=true
ENABLE_VIDEO_CONFERENCING=true
ENABLE_FILE_UPLOADS=true
ENABLE_ANALYTICS=true
DEBUG_MODE=true

# =======================================================
# RATE LIMITING (Optional)
# =======================================================
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# =======================================================
# SOCIAL MEDIA & CONTACT (Optional)
# =======================================================
NEXT_PUBLIC_CONTACT_EMAIL=contact@yourdomain.com
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/your-company
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/youraccount
NEXT_PUBLIC_GITHUB_URL=https://github.com/yourusername