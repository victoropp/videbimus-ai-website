# Environment Configuration Template for Vidibemus AI
# Copy this file to .env and fill in your actual values

# Application Settings
NODE_ENV=production
APP_VERSION=1.0.0
APP_URL=https://vidibemus.ai
NEXTAUTH_URL=https://vidibemus.ai
NEXTAUTH_SECRET=your-nextauth-secret-here

# Database
DATABASE_URL=postgresql://user:password@host:port/database
DATABASE_PASSWORD=your-secure-database-password

# Redis
REDIS_URL=redis://user:password@host:port
REDIS_PASSWORD=your-redis-password

# AI Services
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
NEXT_PUBLIC_HUGGINGFACE_API_KEY=your-huggingface-api-key
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=your-pinecone-index

# Email Service (Resend)
RESEND_API_KEY=your-resend-api-key
FROM_EMAIL=noreply@vidibemus.ai

# Daily.co (Video Conferencing)
DAILY_API_KEY=your-daily-api-key

# Monitoring & Logging
SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_SENTRY_DSN=your-public-sentry-dsn

# Security
ENCRYPTION_KEY=your-encryption-key
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# File Storage
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# Notifications
SLACK_WEBHOOK_URL=your-slack-webhook-url
DISCORD_WEBHOOK_URL=your-discord-webhook-url
ALERT_EMAIL=alerts@vidibemus.ai

# AWS S3 (for backups)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BACKUP_BUCKET=your-backup-bucket

# Vercel (if deploying to Vercel)
VERCEL_TOKEN=your-vercel-token
ORG_ID=your-vercel-org-id
PROJECT_ID=your-vercel-project-id

# Grafana (for monitoring dashboard)
GRAFANA_USER=admin
GRAFANA_PASSWORD=your-grafana-password

# Development Only
NEXT_PUBLIC_DEV_MODE=false
DEBUG_MODE=false