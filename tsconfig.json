{
  "compilerOptions": {
    // Target and Library Configuration
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "ES2020"],
    
    // Module System
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true, // Enabled for enterprise-grade type safety
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    
    // JSX Configuration
    "jsx": "preserve",
    "jsxImportSource": "react",
    
    // Build Performance
    "incremental": true,
    "plugins": [{"name": "next"}],
    
    // Additional Type Checking
    "noUnusedLocals": false, // Temporarily disabled
    "noUnusedParameters": false, // Temporarily disabled
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": false,
    "exactOptionalPropertyTypes": false, // Temporarily disabled
    
    // Path Mapping
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/features/*": ["./src/features/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/types/*": ["./src/types/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/config/*": ["./src/config/*"],
      "@/constants/*": ["./src/constants/*"],
      "@/shared/*": ["./src/shared/*"],
      "@/assets/*": ["./public/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist",
    "cypress",
    "playwright",
    "tests/**/*",
    "src/test/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.cy.ts",
    "**/*.cy.tsx"
  ]
}
