# Production Environment Configuration Template
# Copy this file to .env.production and fill in your actual values

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://videbimusai.com

# Database - PostgreSQL
DATABASE_URL=postgresql://vidibemus:YOUR_DB_PASSWORD@localhost:5432/vidibemus_ai
DIRECT_URL=postgresql://vidibemus:YOUR_DB_PASSWORD@localhost:5432/vidibemus_ai

# Authentication
NEXTAUTH_URL=https://videbimusai.com
NEXTAUTH_SECRET=YOUR_NEXTAUTH_SECRET_HERE
JWT_SECRET=YOUR_JWT_SECRET_HERE

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=YOUR_REDIS_PASSWORD

# AI Providers
OPENAI_API_KEY=YOUR_OPENAI_API_KEY
ANTHROPIC_API_KEY=YOUR_ANTHROPIC_API_KEY
HUGGINGFACE_API_KEY=YOUR_HUGGINGFACE_API_KEY
GROQ_API_KEY=YOUR_GROQ_API_KEY
COHERE_API_KEY=YOUR_COHERE_API_KEY
TOGETHER_API_KEY=YOUR_TOGETHER_API_KEY

# Pinecone Vector Database
PINECONE_API_KEY=YOUR_PINECONE_API_KEY
PINECONE_ENVIRONMENT=YOUR_PINECONE_ENVIRONMENT
PINECONE_INDEX_NAME=vidibemus-knowledge

# Stripe Payment
STRIPE_SECRET_KEY=YOUR_STRIPE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=YOUR_STRIPE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=YOUR_STRIPE_WEBHOOK_SECRET

# Email Configuration
EMAIL_FROM=noreply@videbimusai.com
EMAIL_SERVER_HOST=localhost
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=noreply@videbimusai.com
EMAIL_SERVER_PASSWORD=YOUR_EMAIL_PASSWORD
EMAIL_SECURE=false

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET

# GitHub OAuth (Optional)
GITHUB_ID=YOUR_GITHUB_ID
GITHUB_SECRET=YOUR_GITHUB_SECRET

# Monitoring & Analytics
SENTRY_DSN=YOUR_SENTRY_DSN
GOOGLE_ANALYTICS_ID=YOUR_GA_ID
HOTJAR_ID=YOUR_HOTJAR_ID

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Security
CORS_ORIGIN=https://videbimusai.com
SESSION_MAX_AGE=86400
CSRF_SECRET=YOUR_CSRF_SECRET

# Cloudflare
CLOUDFLARE_ZONE_ID=YOUR_CLOUDFLARE_ZONE_ID
CLOUDFLARE_API_TOKEN=YOUR_CLOUDFLARE_API_TOKEN

# Backup Configuration
S3_BACKUP_BUCKET=vidibemus-backups
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_REGION=us-east-1

# Feature Flags
ENABLE_MAINTENANCE_MODE=false
ENABLE_DEBUG_LOGS=false
ENABLE_API_RATE_LIMITING=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=true

# Application Secrets
APP_SECRET_KEY=YOUR_APP_SECRET_KEY
ENCRYPTION_KEY=YOUR_ENCRYPTION_KEY